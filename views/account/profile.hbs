
<div class="container sp">
    <div class="row">
        <div class="col-md-2">
            <h4>Xin chào {{name}}</h4>
            <div>
                <a href="edit-info">Sửa đổi thông tin</a>
            </div>
            <div>
                <a href="../cart">Giỏ hàng</a>
            </div>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-4">
                    <h5>Thông tin cá nhân</h5>
                    <h5>{{name}}</h5>
                </div>
                <div class="col-md-8">
                    <h5>Sổ địa chỉ</h5>
                    <h5>{{name}}</h5>
                    <span>{{diachi}}</span>
                    <h5>{{sdt}} </h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Đơn hàng gần đây</h3>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr></tr>
                                    </thead>
                                    <tbody>
                                    <tr class="green">
                                        <td>Mã đơn hàng</td>
                                        <td>Ngày đặt hàng</td>
                                        <td>Tổng tiền</td>
                                        <td>Chi tiết</td>
                                    </tr>
                                    {{#each donHang}}
                                    <tr>
                                        <td>{{idThanhToan}}</td>
                                        <td>{{ngayDatHang}}</td>
                                        <td>{{number_format tongGia}}đ </td>
                                        <td>
                                            <a href="order?id={{idThanhToan}}">Xem </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                    
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>